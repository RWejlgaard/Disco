<metro:MetroWindow x:Class="disco.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:metro="http://metro.mahapps.com/winfx/xaml/controls"
        xmlns:dragablz="clr-namespace:Dragablz;assembly=Dragablz"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        GlowBrush="{DynamicResource AccentColorBrush}"
        Background="#FF69B940"
        mc:Ignorable="d"
        Title="DISCO" Height="367" Width="541" MinHeight="405" MinWidth="598" WindowStartupLocation="CenterScreen" >
    <metro:MetroWindow.LeftWindowCommands>
        <metro:WindowCommands>

        </metro:WindowCommands>
    </metro:MetroWindow.LeftWindowCommands>
    <metro:MetroWindow.RightWindowCommands>
        <metro:WindowCommands>
            <Button x:Name="TitleAboutBtn" Content="about" Click="TitleAboutBtn_Click" />
        </metro:WindowCommands>
    </metro:MetroWindow.RightWindowCommands>

    <Grid Background="#252525">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="368*" MinWidth="266"/>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition Width="223*" MinWidth="200"/>
        </Grid.ColumnDefinitions>

        <dragablz:TabablzControl x:Name="TabControl" Height="Auto" Margin="5,50,5,5" Width="Auto" Background="{x:Null}" BorderBrush="#FFCCCCCC">
            <TabItem Header="Control" BorderBrush="#FF69B940" FontFamily="Product Sans">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="79*" MinWidth="134"/>
                        <ColumnDefinition Width="97*"/>
                    </Grid.ColumnDefinitions>
                    <GroupBox x:Name="GroupBox" Header="Servers" Margin="5,4,5,5" Height="Auto" Width="Auto" Grid.Column="0" Background="#FF69B940" BorderBrush="#FF69B940" Grid.RowSpan="5" BorderThickness="0.6">
                        <ListView x:Name="ControlServerList" Background="{x:Null}" BorderBrush="{x:Null}" Margin="0,0,0,0" Foreground="{x:Null}" Focusable="False">
                            <CheckBox Content="DANS-DEV-1" Margin="5,2,2,2" Width="Auto" Foreground="White" IsHitTestVisible="True"/>
                            <CheckBox Content="DANS-DEV-2" Margin="5,2,2,2" Width="Auto" Foreground="White" IsHitTestVisible="True"/>
                            <CheckBox Content="DANS-QA" Margin="5,2,2,2" Width="Auto" Foreground="White" IsHitTestVisible="True"/>
                            <CheckBox Content="DANS-TEST" Margin="5,2,2,2" Width="Auto" Foreground="White" IsHitTestVisible="True"/>
                            <CheckBox Content="INT-QA" Margin="5,2,2,2" Width="Auto" Foreground="White" IsHitTestVisible="True"/>
                            <CheckBox Content="INT-TEST" Margin="5,2,2,2" Width="Auto" Foreground="White" IsHitTestVisible="True"/>
                            
                        </ListView>
                        
                    </GroupBox>
                    <Button x:Name="ServersSelectAllBtn" FontFamily="Product Sans" Style="{DynamicResource SquareButtonStyle}" BorderThickness="1" Margin="10,0,10,10" VerticalAlignment="Bottom" Content="select All" FontWeight="Normal"/>
                    <ListBox Grid.Column="1" Height="Auto" Margin="0,5,10,5">
                        <Button x:Name="ControlStartBtn" Style="{DynamicResource SquareButtonStyle}" Content="Start" Margin="0,2,0,2" Height="25"  BorderThickness="1" Click="ControlStartBtn_Click" FontFamily="Product Sans" FontWeight="Normal" />
                        <Button x:Name="ControlStopBtn" Style="{DynamicResource SquareButtonStyle}" Content="Stop" Margin="0,2,0,2" Height="25"  BorderThickness="1" Click="ControlStopBtn_Click" FontFamily="Product Sans" FontWeight="Normal"/>
                        <Button x:Name="ControlRestartBtn" Style="{DynamicResource SquareButtonStyle}" Content="Restart" Margin="0,2,0,2" Height="26"  BorderThickness="1" Click="ControlRestartBtn_Click" FontFamily="Product Sans" FontWeight="Normal"/>
                    </ListBox>
                </Grid>
            </TabItem>
            <TabItem Header="Deployment" BorderBrush="#FF69B940" FontFamily="Product Sans">
                <Grid>
                    <Label x:Name="Label2" Content="UNDER CONTRUCTION" HorizontalAlignment="Left" Margin="-34,115,-39,0" VerticalAlignment="Top" Foreground="White" FontSize="40" RenderTransformOrigin="0.5,0.5" Width="423">
                        <Label.RenderTransform>
                            <TransformGroup>
                                <ScaleTransform/>
                                <SkewTransform/>
                                <RotateTransform Angle="-36.411"/>
                                <TranslateTransform/>
                            </TransformGroup>
                        </Label.RenderTransform>
                    </Label>
                </Grid>
            </TabItem>
            <dragablz:TabablzControl.InterTabController>
                <dragablz:InterTabController />
            </dragablz:TabablzControl.InterTabController>
        </dragablz:TabablzControl>
        <GridSplitter HorizontalAlignment="Stretch" Grid.Column="1" Margin="0,0,1,0" Background="#FF3A3A3A"/>
        <TextBox x:Name="Log" Grid.Column="2" Margin="5" Background="#FF383838" Foreground="White" AcceptsReturn="True" IsReadOnly="True" TextWrapping="Wrap" FontFamily="Lucida Console" />
        <Canvas Grid.Column="0" Margin="10,10,264,334">
            <Rectangle Fill="#FF69B940" HorizontalAlignment="Left" Height="30" Stroke="#FF69B940" VerticalAlignment="Top" Width="30"/>
            <Label x:Name="Label" Content="KMD" VerticalAlignment="Top" Height="30" Width="57" Foreground="White" HorizontalAlignment="Left" FontFamily="Product Sans" FontSize="21.333" Canvas.Left="35"/>
        </Canvas>
    </Grid>

</metro:MetroWindow>
